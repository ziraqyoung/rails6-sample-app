<li id="micropost-<%= micropost.id %>" class="border rounded-md shadow mt-3 px-2 pt-2 bg-gray-200">
  <div class="flex">
    <div class="flex-shrink-0">
      <%= link_to image_tag(user_avatar_url(micropost.user, size:50), class: 'h-10 w-10 p-1 rounded-full border'), micropost.user %>
    </div>

    <div class="flex-shrink w-full ml-2 md:ml-4 pl-1 border-l-4">
      <div class="flex justify-between items-start">
        <div class="user font-bold"><%= link_to micropost.user.name, micropost.user, class: 'underline hover:no-underline' %></div>

        <% if current_user?(micropost.user) %>
          <div class="timestamps text-xs">
            <%= link_to 'delete', micropost, method: :delete, data: { confirm: 'You sure?' }, class: 'text-red-600 underline hover:no-underline' %>
          </div>
        <% end %>
      </div>

      <div class="timestamps py-1 text-xs italic">
        Posted <%= time_ago_in_words micropost.created_at %> ago
      </div>

      <div class="border -mb-1 rounded-md bg-gray-400 px-2 py-1">
        <span class="content"><%= micropost.content %></span>
        <div class="pt-1">
          <%= image_tag micropost.display_size if micropost.image.attached? %>
        </div>
      </div>
    </div>
  </div>
</li>
