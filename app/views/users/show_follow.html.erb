<% provide :title, @title %>
<div>
  <aside>
    <section class="user_info flex items-center">
      <%= image_tag user_avatar_url(@user, size: 100), class: 'object-cover p-1 rounded-full border' %>
      <h1 class="pl-3 text-xl font-bold leading-tight tracking-tight"><%= @user.name %></h1>
      <span><%= link_to 'view my profile', @user %></span>
      <span>Microposts: <%= @user.microposts.count %></span>
    </section>

    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="users_avatars">
          <% @users.each do |user| %>
            <%= link_to(image_tag(user_avatar_url(user, size: 30) ), user) %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>

  <div>
    <h3><% @title %></h3>
    <% if @users.any? %>
      <ul>
        <%= render @users %>
      </ul>
      <div class="pt-4">
        <%= will_paginate %>
      </div>
    <% end %>
  </div>
</div>

