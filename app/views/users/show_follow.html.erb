<% provide :title, @title %>
<div class="flex">
  <aside class="w-1/4">
    <section class="user_info flex items-center">
      <%= image_tag user_avatar_url(@user, size: 100), class: 'object-cover p-1 rounded-full border' %>
      <h1 class="pl-3 text-xl font-bold leading-tight tracking-tight"><%= @user.name %></h1>
      <span><%= link_to 'view my profile', @user %></span>
      <span>Microposts: <%= @user.microposts.count %></span>
    </section>

    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="users_avatars flex flex-wrap overflow-hidden">
          <% @users.each do |user| %>
            <%= link_to(image_tag(user_avatar_url(user, size: 30), class: 'h-8 w-8 rounded-full' ), user, class: 'flex text-sm border-2 border-transparent rounded-full focus:outline-none focus:border-white transition duration-150 ease-in-out') %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>

  <div class="w-3/4 pl-4">
    <h3><% @title %></h3>
    <% if @users.any? %>
      <ul>
        <%= render @users %>
      </ul>
      <div class="pt-4">
        <%= will_paginate %>
      </div>
    <% end %>
  </div>
</div>

