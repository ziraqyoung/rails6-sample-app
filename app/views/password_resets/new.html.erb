<% provide :title, 'Forgot Password' %>
<h1 class="text-3xl font-bold text-center">Forgot Password</h1>

<div class="max-w-screen-md mx-auto pb-8">
  <div class="px-4 py-3 bg-gray-100 rounded-lg shadow-md">
    <%= form_with url: password_resets_path, scope: :password_reset, local: true do |f| %>

      <div class="pb-4 flex flex-col">
        <span class="pb-2">
          <%= f.label :email, class: 'text-xs font-bold' %>
        </span>
        <%= f.email_field :email, placeholder: 'Email...', class: 'px-3 py-2 w-full placeholder-gray-800 rounded-lg border bg-gray-300 focus:shadow-md focus:border-gray-500' %>
      </div>

      <div class="pt-3">
        <%= f.submit 'Submit', class: 'px-3 py-2 bg-teal-600 text-white leading-none rounded-lg shadow-lg hover:bg-teal-700 cursor-pointer uppercase tracking-tighter' %>
      </div>
    <% end %>
  </div>
</div>
