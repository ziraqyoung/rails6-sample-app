<% provide :title, 'Log in' %>
<h1 class="text-3xl font-bold text-center">Log in</h1>

<div class="max-w-screen-md mx-auto pb-8">
  <div class="px-4 py-3 bg-gray-100 rounded-lg shadow-md">
    <%= form_with url: login_path, scope: :session, local: true do |f| %>

      <div class="pb-4 flex flex-col">
        <span class="pb-2">
          <%= f.label :email, class: 'text-xs font-bold' %>
        </span>
        <%= f.email_field :email, placeholder: 'Email...', class: 'px-3 py-2 w-full placeholder-gray-800 rounded-lg border bg-gray-300 focus:shadow-md focus:border-gray-500' %>
      </div>

      <div class="pb-4 flex flex-col">
        <span class="pb-2">
          <%= f.label :password, class: 'text-xs font-bold' %>
        </span>
        <%= f.password_field :password, placeholder: 'Password...', class: 'px-3 py-2 w-full placeholder-gray-800 rounded-lg border bg-gray-300 focus:shadow-md focus:border-gray-500' %>
      </div>

      <div class="pb-4 flex flex-col">
        <%= f.label :remember_me, class: 'text-xs font-bold' do %>
          <span class="flex items-center">
            <span>
              <%= f.check_box :remember_me, class: 'px-3 py-2' %>
            </span>
            <span class="ml-2 text-gray-700">Remember me on this computer</span>
          </span>
        <% end %>
      </div>



      <div class="pt-3">
        <%= f.submit 'Log in', class: 'px-3 py-2 bg-teal-600 text-white rounded-lg shadow-lg hover:bg-teal-700 cursor-pointer uppercase tracking-tighter' %>
      </div>
    <% end %>

    <div class="pt-3">
      <p class="text-xs">New user? <%= link_to 'Sign up now!', signup_path, class: 'pl-2 text-base underline hover:no-underline' %></p>
    </div>
  </div>
</div>
